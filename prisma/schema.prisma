// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model File {
  id            Int       @id @default(autoincrement())
  title         String    @default("")
  description   String    @default("")
  imageUrl      String
  thumbnailUrl  String    @default("")
  width         Int
  height        Int
  originalName  String    @default("")
  fanworkTitle  String    @default("")
  characterList String    @default("")
  location      String    @default("")
  locationName  String    @default("")
  latitude      Float?
  longitude     Float?
  cameraModel   String    @default("")
  aperture      String    @default("")
  focalLength   String    @default("")
  iso           String    @default("")
  shutterSpeed  String    @default("")
  captureTime   String    @default("")
  metadata      String    @default("{}")
  genre        String    @default("")
  createdAt     DateTime  @default(now())
}

model SiteSetting {
  id              Int      @id @default(1)
  name            String   @default("Liora Gallery")
  description     String   @default("A minimal gallery for photography and illustrations.")
  iconUrl         String   @default("/favicon.ico")
  socialHomepage  String   @default("")
  socialGithub    String   @default("")
  socialTwitter   String   @default("")
  socialInstagram String   @default("")
  socialWeibo     String   @default("")
  socialYoutube   String   @default("")
  socialBilibili  String   @default("")
  socialTiktok    String   @default("")
  socialLinkedin  String   @default("")
  updatedAt       DateTime @updatedAt
}
